<span class="NavMenuItem">
	@Content
</span>

<style>
	.NavMenuItem {
		height: @Height;
		background-color: @BackgroundColor;
		border-radius: @BorderRadius;
		border-style: @BorderStyle;
		margin: @Margin;
		align-content: @AlignContent;
		font-size: @FontSize;
		font-weight: @FontWeight;
		cursor: pointer;
	}
</style>

@code {
	[Parameter]
	public string Content { get; set; } = String.Empty;
	[Parameter]
	public string AlignContent { get; set; } = "center";
	[Parameter]
	public string Width { get; set; } = "inherit";
	[Parameter]
	public string Height { get; set; } = "4vh";
	[Parameter]
	public string Margin { get; set; } = "0";
	[Parameter]
	public string BackgroundColor { get; set; } = "transparent";
	[Parameter]
	public string FontColor { get; set; } = "inherit";
	[Parameter]
	public string FontSize { get; set; } = "inherit";
	[Parameter]
	public string FontWeight { get; set; } = "200";
	[Parameter]
	public string BorderRadius { get; set; } = "0";
	[Parameter]
	public string BorderStyle { get; set; } = "none";

	[Parameter]
	public EventCallback<MouseEventArgs> OnClick { get; set; }
}
